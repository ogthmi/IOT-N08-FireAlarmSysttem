<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".presentation.ui.user.firmware.UpdateFirmwareFragment">

    <View
        android:id="@+id/closeBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0.03"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/c_p_nh_t_firmware"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/closeBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"/>

    <TextView
        android:id="@+id/titleDevice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/thi_t_b"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"/>

    <TextView
        android:id="@+id/valueDevice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/thi_t_b"
        android:textColor="@color/text_primary"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/titleDevice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"/>

    <TextView
        android:id="@+id/titleFirmwareCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/phi_n_ba_firmware_hi_n_t_i"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/valueDevice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"/>

    <TextView
        android:id="@+id/valueFirmwareCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thi_t_b"
        android:textColor="@color/text_primary"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/titleFirmwareCurrent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="16sp"
        android:layout_marginHorizontal="20sp"/>

    <TextView
        android:id="@+id/titleChooseFirmware"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chọn phiên bản firmware"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/valueFirmwareCurrent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleChooseFirmware"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/input"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintVertical_bias="0.01"/>

    <!-- Cancel button -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/h_y"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@drawable/control_item"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Save button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cập nhật"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        app:layout_constraintTop_toTopOf="@id/btnCancel"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/btnCancel"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHorizontal_bias="1"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnSave"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="20sp"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>