<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.user.control.AdjustThresholdFragment"
    android:background="@color/background"
    >

    <View
        android:id="@+id/closeBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0.03"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adjust_the_threshold"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/closeBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"/>

    <!-- Fire -->
    <TextView
        android:id="@+id/titleFire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fire_sensor_threshold"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="16sp"
        android:layout_marginHorizontal="20sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputFireLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleFire"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="10dp"
        app:hintEnabled="false"
        app:helperTextTextColor="@color/red">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputFire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/e_g_4095"
            android:background="@drawable/input"
            android:padding="15sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Smoke -->
    <TextView
        android:id="@+id/titleSmoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/smoke_sensor_threshold"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/inputFireLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHeight_percent="0.1"
        android:textSize="16sp"
        android:layout_marginHorizontal="20sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputSmokeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleSmoke"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="10dp"
        app:hintEnabled="false"
        app:helperTextTextColor="@color/red">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputSmoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/e_g_592"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/input"
            android:padding="15sp"
            android:textColor="@color/text_primary"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/setDefaultBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputSmokeLayout"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:orientation="horizontal"
        android:layout_marginTop="20sp">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:checked="false"
            android:buttonTint="@color/main"
            android:layout_marginEnd="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_default_value"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- Cancel button -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@drawable/control_item"
        app:layout_constraintTop_toBottomOf="@id/setDefaultBtn"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Save button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/set_up"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button_blur"
        app:layout_constraintTop_toTopOf="@id/btnCancel"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/btnCancel"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHorizontal_bias="1"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnSave"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="20sp"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>