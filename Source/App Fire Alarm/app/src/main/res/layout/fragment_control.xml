<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.control.ControlFragment"
    android:background="@color/background">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/b_ng_i_u_khi_n"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"
        app:layout_constraintVertical_bias="0.02"
        android:layout_marginHorizontal="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20sp"
            android:columnCount="2"
            android:rowCount="3">

            <LinearLayout
                app:cardBackgroundColor="@color/white"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:gravity="center"
                android:background="@drawable/control_item"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_temperature" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nhi_t"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/txtTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                app:cardBackgroundColor="@color/white"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:gravity="center"
                android:background="@drawable/control_item"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_humidity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/txtHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                app:cardBackgroundColor="@color/white"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:gravity="center"
                android:background="@drawable/control_item"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_fire" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/c_m_bi_n_l_a"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/txtFire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                app:cardBackgroundColor="@color/white"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:gravity="center"
                android:background="@drawable/control_item"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_smoke" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_ng_kh_i_adc"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/txtSmoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarmBtn"
                app:cardBackgroundColor="@color/white"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:gravity="center"
                android:background="@drawable/control_item"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_alarm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/c_i_b_o"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switchAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                    <TextView
                        android:id="@+id/txtAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bật"
                        android:textSize="10sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pumpBtn"
                app:cardBackgroundColor="@color/white"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:gravity="center"
                android:background="@drawable/control_item"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_pump" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m_y_b_m"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switchPump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                    <TextView
                        android:id="@+id/txtPump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bật"
                        android:textSize="10sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAdjust"
                app:cardBackgroundColor="@color/white"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:gravity="center"
                android:background="@drawable/control_item"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_adjust" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điều chỉnh"
                    android:textSize="10sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"/>
            </LinearLayout>
        </GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>