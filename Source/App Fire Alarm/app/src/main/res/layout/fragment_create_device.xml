<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".presentation.ui.admin.device.create.CreateDeviceFragment">

    <View
        android:id="@+id/closeBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0.03"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/create_new_device"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/closeBtn"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleDeviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_id"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputDeviceIdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleDeviceId"
                android:layout_marginTop="10dp"
                app:hintEnabled="false"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDeviceId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/e_g_abc"
                    android:background="@drawable/input"
                    android:padding="15sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/titleDeviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_name"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/inputDeviceIdLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputDeviceNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleDeviceName"
                android:layout_marginTop="10dp"
                app:hintEnabled="false"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDeviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/e_g_abc"
                    android:background="@drawable/input"
                    android:padding="15sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/titleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/inputDeviceNameLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputDescriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleDescription"
                android:layout_marginTop="10dp"
                app:hintEnabled="false"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="@string/e_g_abc"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/input"
                    android:padding="15sp"
                    android:minLines="3"
                    android:maxLines="6"
                    android:textColor="@color/text_primary"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/titleSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/list_sensor"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/inputDescriptionLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_1_temperature_sensor"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleSensor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:layout_marginTop="10sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleNameTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_dht22t"
                android:textColor="@color/text_primary"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleTemperature"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleUnitTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unit_c"
                android:textColor="@color/text_primary"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleNameTemperature"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleHumidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2_humidity_sensor"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleUnitTemperature"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:layout_marginTop="10sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleNameHumidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dht22h"
                android:textColor="@color/text_primary"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleHumidity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleUnitHumidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unit_rh"
                android:textColor="@color/text_primary"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleNameHumidity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleFire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_fire_sensor"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleUnitHumidity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:layout_marginTop="10sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleNameFire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_mhs"
                android:textColor="@color/text_primary"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleFire"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleFireThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fire_sensor_threshold"
                android:textColor="@color/text_primary"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleNameFire"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputFireThresholdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleFireThreshold"
                android:layout_marginTop="10dp"
                app:hintEnabled="false"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputFireThreshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="@string/e_g_4500"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/input"
                    android:padding="15sp"
                    android:textColor="@color/text_primary"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/titleSmoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_4_smoke_sensor"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/inputFireThresholdLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:layout_marginTop="10sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleNameSmoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_mp2"
                android:textColor="@color/text_primary"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleSmoke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titleSmokeThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/smoke_sensor_threshold"
                android:textColor="@color/text_primary"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleNameSmoke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:textSize="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputSmokeThresholdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleSmokeThreshold"
                android:layout_marginTop="10dp"
                app:hintEnabled="false"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputSmokeThreshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="@string/e_g_4500"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/input"
                    android:padding="15sp"
                    android:textColor="@color/text_primary"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/titleBuzzer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_5_buzzer"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/inputSmokeThresholdLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:layout_marginTop="10sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/titlePump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_6_pump"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/titleBuzzer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHeight_percent="0.1"
                android:layout_marginTop="10sp"
                android:textSize="16sp"/>

            <!-- Cancel button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="@drawable/control_item"
                app:layout_constraintTop_toBottomOf="@id/titlePump"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintVertical_bias="0.02"
                app:layout_constraintHorizontal_bias="0" />

            <!-- Save button -->
            <Button
                android:id="@+id/btnCreate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/create"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_blur"
                app:layout_constraintTop_toTopOf="@id/btnCancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btnCancel"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintHorizontal_bias="1"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btnCancel"
                android:layout_marginTop="20sp"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>